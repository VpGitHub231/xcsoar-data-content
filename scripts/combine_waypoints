then
  OutputFileNameString="waypoints_all_"
fi

# for testing (can be removed later)
#echo $WaypointString
#echo $OutputFileNameString

# concatenate all files
cat $WaypointString > ../$OutputFileNameString`date +%4Y%m%d`.cup
